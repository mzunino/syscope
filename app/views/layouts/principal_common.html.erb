<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
       <head>
         <title>Sitio Oficial de Contenidos</title>
	 <%=javascript_include_tag:defaults%>
         <%= stylesheet_link_tag "contenidos" , :media => "all" %>
         <%= stylesheet_link_tag "thickbox" , :media => "all" %>
         <%=javascript_include_tag "jquery-1.2.3.min.js"%>
         <%=javascript_include_tag "modal.js"%>
         <%= stylesheet_link_tag "thickbox" , :media => "all" %>
         <%= stylesheet_link_tag "modal" , :media => "all" %>



       </head>
       <body id="principal">
         <div id="banner">
           <%= image_tag("logo.png" ) %>
           <%= @page_title || "..." %>
         </div>
         <div id="columns">
           <div id="side">
	      
	      <% @user = session[:user_id] 

		if session[:user_id] 
                   @user=User.find(session[:user_id])
                   if @user
                        @nombre_usuario=@user.name
		   end
		end
	      %>

	      <% if @nombre_usuario %>	
		     <p>Usuario Logueado: <%= @nombre_usuario %></p>
 	      <% else %>
		      <%= link_to 'Login', :controller => 'admin/login' %><br />	 	
	      <% end %>

              <%= render(:partial => "principal/menu_usuario", :locals => { :numero_espacio => "1" })%>

           </div>
           <div id="main">
	       <% if flash[:notice] -%>
		  <div id="notice"><%= flash[:notice] %></div>
	       <% end -%>	

              <%= yield :layout %>
           </div>
         </div>
       </body>
</html>

